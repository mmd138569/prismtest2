<UserControl x:Class="prismtest2.Views.Imag_loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True" MaxHeight="500" MinWidth="810" MinHeight="500" MaxWidth="810">
    <Grid  Background="#31363F">
            <StackPanel>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="810" Height="70" >
                    <Button Template="{DynamicResource round}"  Width="100" Height="50" Foreground="Bisque" BorderBrush="AntiqueWhite" Background="#31363F" Content="SELECT FOLDER"  Command="{Binding folder_selection}" HorizontalAlignment="Left" Margin="10,10,1,1"/>
            </StackPanel>

            </StackPanel>
    </Grid>
</UserControl>
