<UserControl x:Class="prismtest2.Views.Imag_loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True" MaxHeight="500" MinWidth="810" MinHeight="500" MaxWidth="810">
    <Grid  Background="#31363F">
        <StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="810" Height="70" >
                <Button Template="{DynamicResource round}"  Width="100" Height="50" Foreground="Bisque" BorderBrush="AntiqueWhite" Background="#31363F" Content="SELECT FOLDER"  Command="{Binding folder_selection}" HorizontalAlignment="Left" Margin="10,10,1,1"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="6,1,1,1" >
                <Border Background="#31363F" Height="394"  Width="782" BorderBrush="Bisque" CornerRadius="3" BorderThickness="1">

                    <DataGrid RowHeaderStyle="{DynamicResource DataGridRowHeaderStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" ItemsSource="{Binding ImageCollection}" AutoGenerateColumns="False" IsReadOnly="True"  HorizontalAlignment="Left" Margin="4,10,1,10" Background="#31363F">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Image Name" Binding="{Binding ImageName}" />
                            <!-- Add more columns for other properties if needed -->
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
